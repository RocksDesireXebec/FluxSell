{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdProduit</th>
                <th>Libelle</th>
                <th>Prix</th>
                <th>Etoile</th>
                <th>Marque</th>
                <th>Etat</th>
                <th>Note</th>
                <th>QteEnStock</th>
                <th>Description</th>
                <th>Captures</th>
                <th>InformationsDetaillees</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.idProduit }}</td>
                <td>{{ produit.libelle }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.etoile }}</td>
                <td>{{ produit.marque }}</td>
                <td>{{ produit.etat }}</td>
                <td>{{ produit.note }}</td>
                <td>{{ produit.qteEnStock }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.captures }}</td>
                <td>{{ produit.informationsDetaillees ? produit.informationsDetaillees|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
